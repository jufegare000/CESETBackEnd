<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="ceset_PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>co.edu.udea.ceset.dto.User</class>
    <class>co.edu.udea.ceset.dto.Person</class>
    <class>co.edu.udea.ceset.dto.Rolebypermission</class>
    <class>co.edu.udea.ceset.dto.Rolebyuser</class>
    <class>co.edu.udea.ceset.dto.Rolec</class>
    <class>co.edu.udea.ceset.dto.Permission</class>
    <class>co.edu.udea.ceset.dto.Discount</class>
    <class>co.edu.udea.ceset.dto.Notifficationbyrole</class>
    <class>co.edu.udea.ceset.dto.Check</class>
    <class>co.edu.udea.ceset.dto.Themes</class>
    <class>co.edu.udea.ceset.dto.Notifficationbycheck</class>
    <class>co.edu.udea.ceset.dto.Notiffication</class>
    <class>co.edu.udea.ceset.dto.Expenditure</class>
    <class>co.edu.udea.ceset.dto.Budget</class>
    <class>co.edu.udea.ceset.dto.Cohort</class>
    <class>co.edu.udea.ceset.dto.Expenditurebyitem</class>
    <class>co.edu.udea.ceset.dto.Estimated</class>
    <class>co.edu.udea.ceset.dto.Estimatedbyitem</class>
    <class>co.edu.udea.ceset.dto.Budgetbyitem</class>
    <class>co.edu.udea.ceset.dto.Academicactivity</class>
    <class>co.edu.udea.ceset.dto.Item</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/db_ceset?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
